<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="match_parent"
    android:supportsRtl="false"
    android:id="@+id/onnoff_relativelayout">
    <ImageView android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/screen_tweak_img"
        android:src="@drawable/screen_tweak_sun"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/launchpad_icons_bg"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/cancel_everything_img"
        android:src="@drawable/cancel_everything"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/launchpad_icons_bg"
         />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/hide_bubble_img"
        android:src="@drawable/hide_bubble"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/launchpad_icons_bg"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/note_list_img"
        android:src="@drawable/note_list"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/launchpad_icons_bg"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/resize_buble_img"
        android:src="@drawable/resize"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/launchpad_icons_bg"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/note_take_audio_img"
        android:src="@drawable/note_audio"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/launchpad_icons_bg"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/note_take_text_img"
        android:src="@drawable/note_text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/launchpad_icons_bg"/>
</RelativeLayout>
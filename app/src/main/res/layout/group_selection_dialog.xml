<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/groups_layout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlgTxtGroupsComment"
        android:padding="5dp"
        android:textSize="14sp"
        android:text="Hello"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dlgListGroupsItems"
        android:layout_below="@+id/dlgTxtGroupsComment"
        android:layout_above="@+id/dlgEdtxtGroupsTitle" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentBottom="true"
        android:id="@+id/dlgEdtxtGroupsTitle" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvTodoParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvIdTodoParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTitleTodoParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tvIdTodoParent"
                android:text="Title"
                android:textColor="@color/slate_gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvCreateTimeTodoParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitleTodoParent"
                android:layout_marginRight="5dp"
                android:text="Update Time"
                android:textColor="@color/blue_green"
                android:textSize="12dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</android.support.v7.widget.LinearLayoutCompat>
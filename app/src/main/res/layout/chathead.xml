<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:id="@+id/chathead_relativelayout"
    android:background="@drawable/launchpad_icons_bg">
    
    <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chathead_img"
        android:src="@drawable/lightbulb2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtInfoBubble"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:text=" "
        android:textAlignment="center"
        android:textColor="@color/blue_eyes"
        android:textSize="40dp" />


</RelativeLayout>
